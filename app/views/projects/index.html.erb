
<div class="widget-content">

  <% @projects.each do |project| %>

    <div class="project_container">
      <b><%= link_to project.title, project.url, :target => "_parent" %></b>

      <div class="info">
        <div class="progress_bar_container" style="display: none;">
          <div class="bar"></div>
          <div class="text">$230 of $600</div>
        </div>
        <div class="countdown">Pledges open for 
          <span class="has_countdown" until="<%= project.pledge_deadline_at.strftime('%Y/%m/%d %H:%M:%S') %>"></span></div>
        <div class="stretcher"></div>
      </div> <!-- info -->

    </div>

  <% end %>
  
</div>
