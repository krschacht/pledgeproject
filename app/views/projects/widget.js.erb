<% attrib = { :scrolling => 'no',
              :height => 52 * @projects.length - 10,
              :frameborder => 0,
              :style => 'width: 100%; border: 0px;',
              :allowtransparency => 'true' } %>
              
<% html = "<iframe src='#{ user_projects_widget_url( @user ) }' " + 
          attrib.to_a.inject('') { |v,a| v+="#{a[0]}='#{a[1]}' " } +
          "></iframe>" 
%>
<%= raw "document.write(\"" + html.gsub(/"/, '\"') + "\");" %>
